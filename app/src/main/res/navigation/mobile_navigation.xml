<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.trade.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action android:id="@+id/action_home_to_dashboard"
            app:destination="@id/navigation_dashboard"/>
        <action android:id="@+id/action_home_to_notification"
            app:destination="@id/navigation_notifications"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.trade.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action android:id="@+id/action_dashboard_to_home"
            app:destination="@id/navigation_home"/>
        <action android:id="@+id/action_dashboard_to_notification"
            app:destination="@id/navigation_notifications"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.trade.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action android:id="@+id/action_notification_to_home"
            app:destination="@id/navigation_home"/>
        <action android:id="@+id/action_notification_to_dashboard"
            app:destination="@id/navigation_dashboard"/>
    </fragment>
</navigation>